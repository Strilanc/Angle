<Window x:Class="AngleExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="Resources/Field.png" Stretch="UniformToFill"/>
        </Canvas.Background>
        <Grid x:Name="Base" Width="75" Height="75" RenderTransformOrigin="0.5,0.5">
            <Image Source="Resources\Base.png"/>
            <Image x:Name="Turret" Margin="13,2,0,0" Source="Resources\Turret.png" RenderTransformOrigin="0.25,0.5"/>
        </Grid>
        <Image Source="Resources\Target.png" Width="12" Height="12" x:Name="Target" RenderTransformOrigin="0.5,0.5"/>
    </Canvas>
</Window>
